---
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogPostLink from '../components/BlogPostLink.astro';
import Button from 'fulldev-ui/components/Button.astro'
import { getCollection } from "astro:content";

const allPosts = await getCollection("blog");
const tags = [...new Set(allPosts.map((post: any) => post.data.tags).flat())];

const pageTitle = "Blog";
---

<BaseLayout pageTitle={pageTitle}>
  <div class="tags">
    {tags.map((tag) => (
        <Button class="tag"><a href={`/tags/${tag}`}>{tag}</a></Button>
        <p class="tag"></p>
    ))}
  </div>
  <ul>
    {allPosts.map((post: any) => <BlogPostLink url={`/posts/${post.id}/`} title={post.data.title} />)}
  </ul>
</BaseLayout>